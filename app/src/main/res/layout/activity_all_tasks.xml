<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllTasks">


    <TableLayout
        android:id="@+id/tblTasks"
        android:layout_width="377dp"
        android:layout_height="582dp"
        android:background="#5A5A5A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963">

        <TableRow
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="TextView"
            <Button
                android:text="Button"
                android:width="20sp"/>
        <TableRow/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

    <TextView
        android:id="@+id/lblTaskSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="SEARCH: "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchId"
        app:layout_constraintEnd_toStartOf="@+id/searchId" />

    <EditText
        android:id="@+id/searchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tblTasks"
        app:layout_constraintEnd_toEndOf="@+id/tblTasks" />

    <TextView
        android:id="@+id/lblTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TASKS"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/searchId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>